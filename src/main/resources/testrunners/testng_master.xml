<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart Regression Suite" verbose="4" thread-count="2" parallel="tests">
	
	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="Accounts Page chrome Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>
	<test name="Search chrome Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.SearchTest" />
		</classes>
	</test>
	<test name="Product Info Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.ProductPageInfoTest" />
		</classes>
	</test>
	
		<test name="Login Page Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="Accounts Page chrome Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>
	<test name="Search chrome Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.SearchTest" />
		</classes>
	</test>
	<test name="Product Info Test_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.ProductPageInfoTest" />
		</classes>
	</test>
</suite>
